{
  "name": "TBD",
  "version": "1.0.0",
  "description": "TBD",
  "author": "TBD",
  "license": "MIT",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TBD"
  },
  "homepage": "TBD",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn start:prod || yarn start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon server.js\" \"yarn client\"",
    "start:dev:kill": "yarn kill && yarn start:dev",
    "server": "yarn kill && nodemon server.js",
    "client": "cd client && yarn start",
    "install": "cd client && yarn install",
    "build": "cd client && yarn build",
    "heroku-postbuild": "yarn build",
    "kill": "kill-port 3001",
    "lint": "eslint --quiet .",
    "lint:fix": "eslint --fix .",
    "tests": "yarn kill && NODE_ENV=test nyc --reporter=html --reporter=text mocha tests/**/*.spec.js --exit",
    "test:coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "nodemonConfig": {
    "events": {
      "restart": "yarn kill",
      "crash": "yarn kill"
    },
    "delay": "3000",
    "ignore": [
      "client/*"
    ]
  },
  "nyc": {
    "exclude": [
      "client"
    ]
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.1.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "kill-port": "^1.6.0",
    "mocha": "^7.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "sequelize-cli": "^5.5.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.3",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "express-session": "^1.17.0",
    "helmet": "^3.21.2",
    "html-entities": "^1.2.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.11",
    "mysql2": "^2.1.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "passport-session": "^1.0.2",
    "react-bootstrap": "^1.0.0-beta.16",
    "reactstrap": "^8.4.1",
    "safe-buffer": "^5.2.0",
    "scrape-it": "^5.2.3",
    "sequelize": "^4.44.3"
  }
}
